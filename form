    <script>
      document.querySelector('form').onsubmit = function() {
            if (!document.querySelector("#first_name").value) {
                alert('You must provide your first name!');
                return false;
            }
            else if (!document.querySelector("#last_name").value) {
                alert('You must provide your last name!');
                return false;
            }
            else if (!document.querySelector("#email").value) {
                alert('You must provide your email!');
                return false;
            }else if (!document.querySelector("#city").value) {
                alert('You must provide your city!');
                return false;
            }else if (!document.querySelector("#state").value) {
                alert('You must provide your state!');
                return false;
            }else if (!document.querySelector("#zip").value) {
                alert('You must provide zip code!');
                return false;
            }
            else if (!document.querySelector("#house").value) {
                alert('You must provide your house!');
                return false;
            }else if (!document.querySelector("#brief").value) {
                alert('You must provide a quick brief about yourself!');
                return false;
            }
            return true;
        };

    </script>

